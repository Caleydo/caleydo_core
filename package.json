{
  "name": "caleydo_core",
  "description": "Caleydo Web Core including plugin registry, data definition (+ common types: tables, matrix, vector, stratification), ajax, selections",
  "version": "0.0.1-alpha",
  "license": "SEE LICENSE IN LICENSE",
  "repository": "Caleydo/caleydo_core",
  "caleydo": {
    "type": "plugin", 
    "category": "core",
    "plugins": {
      "web": [
        {
          "type": "datatype",
          "id": "matrix",
          "file": "matrix_impl"
        },
        {
          "type": "datatype",
          "id": "table",
          "file": "table_impl"
        },
        {
          "type": "datatype",
          "id": "vector",
          "file": "vector_impl"
        },
        {
          "type": "datatype",
          "id": "stratification",
          "file": "stratification_impl"
        },
        {
          "type": "datatype",
          "id": "graph",
          "file": "graph"
        }
      ]
    },
    "dependencies": {
      "web": {
        "requirejs": "https://github.com/sgratzl/requirejs-bower.git#master",
        "require-css": "~0.1.8",
        "es6-promise": "~3.0.2"
      },
      "tsd": {
        "es6-promise": "35119c"
      }
    },
    "requirejs-config": {
      "map": {
        "*": {
          "css": "${baseUrl}/require-css/css.js"
        }
      }
    },
    "requirejs-bower": {
      "ignore": [
        "requirejs",
        "require-css"
      ]
    }
  },
  "publishConfig": {
    "registry": "http://registry.caleydo.org/"
  },
  "scripts": {
    "compile": "tsc",
    "test": "tslint -c tslint.json src/**.ts"
  },
  "devDependencies": {
    "tslint": "^3.15.1",
    "typescript": "^2.0.3"
  }
}
