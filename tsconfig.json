
{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2019",
    "importHelpers": true,
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true // required for i18next,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}